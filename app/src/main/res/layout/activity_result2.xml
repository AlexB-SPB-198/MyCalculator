<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/milk"
    tools:context=".ResultActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/grey_blue"
        tools:ignore="MissingConstraints">


        <com.google.android.material.button.MaterialButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="290dp"
            android:drawableTop="@drawable/ic_reorder"
            app:backgroundTint="@color/grey_blue" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="44dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/grey_blue"
            android:drawableTop="@drawable/ic_search"


            />

    </LinearLayout>

    <TextView
        android:id="@+id/policies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Policies"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/btn_policy"
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/corner_radius"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/ic_arrow"
        android:paddingLeft="10dp"
        android:text="Policy"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/policies"

        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/btn_product"
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/ic_arrow"
        android:paddingLeft="10dp"
        android:text="Product Category"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_policy"
        android:background="@drawable/corner_radius"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/btn_origin"
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/ic_arrow"
        android:paddingLeft="10dp"
        android:text="Origin Country"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_product"
        android:background="@drawable/corner_radius"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/btn_brand"
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/ic_arrow"
        android:paddingLeft="10dp"
        android:text="Brand"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_origin"
        android:background="@drawable/corner_radius"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Current Policies"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_brand"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/exit"
        android:layout_width="180dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/current"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red"
        app:cornerRadius="10dp"
        android:text="Export as CVS"
        android:textAllCaps="false"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>