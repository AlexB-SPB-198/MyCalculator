<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:insetTop">@dimen/button_insetTop</item>
        <item name="android:insetBottom">@dimen/button_insetBottom</item>
        <item name="android:textSize">@dimen/number_size</item>
    </style>

    <style name="Grey.Button" parent="Base.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/grey</item>
    </style>

    <style name="Dark.Button" parent="Base.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/dark_grey</item>
    </style>
    <style name="Orange.Button" parent="Base.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/orange</item>
    </style>
</resources>